$(function(){
    //returnFir('.return');
    //returnFir('.first');

    //开启页面自动加载一页
    getSaveMoneyMenu();
    clickJump();


    var page=1;
    $('#yyChoose').on("change",function () {
        page = this.value;
        console.log(this.value);
        var data = {pageid : page};
        getList(data);
    })
    $(".previous").on("click",function () {
        page--;
        if (page<1) {
            page=1;
        }
        var data = {pageid : page};
        getList(data);
        setTimeout(function () {
            $('#yyChoose').val(page);
        },1000)
    })
    $(".next").on("click",function () {
        page++;
        if (page>15) {
            page=15;
        }
        var data = {pageid : page};
        getList(data);
        setTimeout(function () {
            $('#yyChoose').val(page);
        },1000)

    })
    function getList( data ) {
        $.ajax({
            url:"http://139.199.157.195:9090/api/getmoneyctrl",
            data: data,
            success: function (res) {
                var html = '';
                html += template("savaMoneyTpl", res);
                $("#container>#listdiv>ul").html(html);
                window.scrollTo(0,0);
            }
        })
    }



    //点击跳转页面
    function clickJump(pageid){
        $.ajax({
            type:'get',
            url:"http://139.199.157.195:9090/api/getmoneyctrl",
            data:{'pageid':pageid},
            success:function (res) {
                var html='';
                var num=Math.ceil(res.totalCount /res.pagesize);
                for(var i=0;i<num;i++){
                    html+='<option value=' +(i+1)+'>'
                        +(i+1)+' /'+num
                        +'</option>'
                }
                $('#yyChoose').html(html);
            }
        });

    }

    //动态加载数据
    function getSaveMoneyMenu(pageid ) {
        if(pageid==""){
            pageid=0;
        }
        $.ajax({
            type:'get',
            url:"http://139.199.157.195:9090/api/getmoneyctrl",
            data:{'pageid':pageid},
            success:function (res) {
                //使用模板函数
                tpl(res,'savaMoneyTpl','#container>#listdiv>ul');


            }
        });
    }

    //模板函数
        function tpl(res,modelId,elementId){
            var html = template(modelId,res);
            //console.log(html);
            $(elementId).html(html);
        }

    //获取数字
    function getNum(str) {
        return str.replace(/[^0-9]+/g, '');
    }


    //������һҳ
    function returnFir( q ){
        var q=document.querySelector(q);
        q.onclick= function () {
            window.history.back(-1);
        }
    }




    template.helper('getDate',function getDate(){
        var d=new Date();
        var year= d.getFullYear();
        var month= d.getMonth()+1;
        month = month < 10 ? '0' + month : month;
        var day= d.getDay();
        return year+'/'+month+'/'+day;

    });

    template.helper('getNum',function getNum(str){
        return str.replace(/[^0-9]+/g, '')
    });





});