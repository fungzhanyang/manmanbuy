@font-face {
    font-family: 'iconfont';
    src: url('../lib/yy/font/iconfont.eot');
    src: url('../lib/yy/font/iconfont.eot?#iefix') format('embedded-opentype'),
    url('../lib/yy/font/iconfont.woff') format('woff'),
    url('../lib/yy/font/iconfont.ttf') format('truetype'),
    url('../lib/yy/font/iconfont.svg#iconfont') format('svg');
}
.iconfont{
    font-family:"iconfont" !important;
    font-size:16px;font-style:normal;
    -webkit-font-smoothing: antialiased;
    -webkit-text-stroke-width: 0.2px;
    -moz-osx-font-smoothing: grayscale;
}


/*头部*/
#header {
   background-color: #ff841d;
   height: 55px;

}
#header a {
    display: block;
}
#header .return{
    font-size: 40px;
    float: left;
    color:white;
    margin-left: 10px;
    margin-top: -2px;
}
#header .logo{
    height: 45px;
    margin-top: 5px;
    margin-left: 35px;
    float: left;
}
#header .app {
    float: right;
    height:40px;
    margin-right: 10px;
    margin-top: 8px;
}
#header .fixDownLoad {
    position: fixed;
    width: 60px;
    height: 65px;
    bottom: 30px;
    right:5px;
    z-index: 999;
}


/*列表部分*/
#container {
    background-color: #fff;
}

#container .y-list ul li {
    height: 150px;
    position: relative;
    padding: 14px 8px ;
}

#container ul li a {
    display: block;
}

#container .pic img{
    width: 100px;
    height: 100px;
    background-size: contain;
    float: left;
    margin: 5px;
}

#container ul li .yytitle {
    color:#333;
    font-size: 15px;
    line-height: 19px;
    min-height: 57px;
    margin-top: 10px;
}

#container ul li .yytitle span{
    color:#ff6c00;
}

#container ul li .yyother {
    margin-top: 13px;
    color:#a1a1a1;
}

#container ul li .yyother .buy{
    float: left;
    font-size: 12px;
}

#container ul li .yyother .message{
    float: right;
    font-size: 12px;
}



/*翻页部分*/
#changed {
    background-color: #fff;
    border-top: 1px solid gainsboro;
}

#changed .previous,.next {
    width: 80px;
    height: 30px;
    padding: 6px 18px;
    background-color: gainsboro;
    border-radius:18px;
    margin: 10px;
}

#changed #yyChoose {
    width: 100px;
    height: 30px;
    margin: 10px;
    font-size: 16px;
    border: 1px solid gainsboro;
}


